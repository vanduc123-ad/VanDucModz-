local btnClose = new("TextButton", {Parent = header, Size = UDim2.new(0,38,0,38), Position = UDim2.new(1,-52,0,14), BackgroundColor3 = CONF.CARD, Text = "âœ•", Font = CONF.FONT, TextSize = 18, TextColor3 = CONF.TEXT, AutoButtonColor = false})
