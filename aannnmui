do
    local p = pages["settings"]
    new("TextLabel", {Parent = p, Position = UDim2.new(0,16,0,12), Size = UDim2.new(1,-32,0,22), BackgroundTransparency = 1, Text = "CÃ i Äáº·t", Font = CONF.FONT, TextSize = 16, TextColor3 = CONF.TEXT})
